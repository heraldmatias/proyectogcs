Un servidor

------------------------
VIEW
------------------------
create VIEW "BOLETA_ALUMNO" AS select bb.valido, bb.serie,bb.saldo,bb.numero,bb.fecha_emision, bb.importe,bc.concepto,a.apellido,a.nombre,a.codigo,
au.first_name,au.last_name from boleta_boleta bb inner join concepto_concepto bc on bb.concepto_id = bc.id 
inner join campus_alumnocampus ac on bb.alumno_id = ac.id
inner join alumno_alumno a on ac.alumno_id = a.id 
inner join auth_user au on au.id = bb.emisor_id
